package com.bnpparibas.dsibddf.ap00420.streamfact.batch.replay.sendpaymentrequest.processor;

import com.bnpparibas.dsibddf.ap00420.streamfact.infrastructure.sql.entities.DeposetEventHistoryEntity;
import org.junit.Before;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.mockito.junit.MockitoJUnitRunner;

import static org.junit.Assert.*;

/**
 * Test JUnit 4 â€“ 100 % coverage SendPaymentRequestProcessor
 * Compatible Sonar / Jenkins / Jacoco / Java 17+
 */
@RunWith(MockitoJUnitRunner.class)
public class SendPaymentRequestProcessorTest {

    private SendPaymentRequestProcessor processor;

    @Before
    public void setUp() {
        processor = new SendPaymentRequestProcessor();
    }

    @Test
    public void process_should_return_same_entity_when_input_not_null() throws Exception {
        DeposetEventHistoryEntity input = new DeposetEventHistoryEntity();
        DeposetEventHistoryEntity output = processor.process(input);
        assertNotNull(output);
        assertSame(input, output);
    }

    @Test
    public void process_should_return_null_when_input_is_null() throws Exception {
        DeposetEventHistoryEntity result = processor.process(null);
        assertNull(result);
    }

    @Test
    public void class_should_implement_itemprocessor_interface() {
        assertTrue(processor instanceof org.springframework.batch.item.ItemProcessor);
    }
}