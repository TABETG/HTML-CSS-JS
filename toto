package com.bnpparibas.dsibddf.ap10530.incident.domain.model.enums;

import com.fasterxml.jackson.annotation.JsonCreator;
import com.fasterxml.jackson.annotation.JsonValue;

/**
 * Code accès requête:
 *  1 = BNP_ONLY        (BCI + FICP BNPP)
 *  2 = BDF_ONLY        (FICP BDF + FCC BDF [+ FCC PM pour PM])
 *  3 = BOTH_BNP_BDF    (BNP + BDF)
 *
 *  --- AER_SOC-1529 (AJOUTS, aucun code supprimé) ---
 *  4 = FICP_BDF        (appel unitaire FICP BDF uniquement)
 *  5 = FCC_BDF         (appel unitaire FCC BDF uniquement ; inclut FCC PM pour PM)
 *  6 = FICP_BCEF       (ajout unitaire du bloc FICP_BNPP uniquement)
 *  7 = BCI_BCEF        (ajout unitaire du bloc BCI uniquement)
 */
public enum RequestTypeEnum {

    // Valeurs historiques (inchangées)
    BNP_ONLY("1"),
    BDF_ONLY("2"),
    BOTH_BNP_BDF("3"),

    // --- AER_SOC-1529 : AJOUTS SANS SUPPRESSION ---
    FICP_BDF("4"),   // autorise seulement FICP BDF
    FCC_BDF("5"),    // autorise seulement FCC BDF (+ FCC PM si personne morale)
    FICP_BCEF("6"),  // autorise seulement l’ajout FICP BNPP (BCEF)
    BCI_BCEF("7");   // autorise seulement l’ajout BCI (BCEF)

    @JsonCreator
    public static RequestTypeEnum fromValue(final String text) {
        for (final RequestTypeEnum b : RequestTypeEnum.values()) {
            if (String.valueOf(b.value).equals(text)) {
                return b;
            }
        }
        return null;
    }

    private final String value;

    RequestTypeEnum(final String value) {
        this.value = value;
    }

    @Override
    @JsonValue
    public String toString() {
        return String.valueOf(value);
    }
}
