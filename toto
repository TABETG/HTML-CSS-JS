package com.bnpparibas.dsibddf.ap00420.streamfact.domain.commons;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class ActionTypeEnumTest {

    @Test
    void testEnumValuesAndGetters() {
        // Vérifie le nombre de valeurs
        ActionTypeEnum[] values = ActionTypeEnum.values();
        assertEquals(3, values.length);

        // Vérifie chaque élément
        ActionTypeEnum paymentProcessed = ActionTypeEnum.SF_PAYMENT_REQUEST_PROCESSED;
        assertEquals("1", paymentProcessed.getCode());
        assertEquals("SF_PAYMENT_REQUEST_PROCESSED", paymentProcessed.getLabel());

        ActionTypeEnum avProcessed = ActionTypeEnum.SF_AV_REQUEST_PROCESSED;
        assertEquals("2", avProcessed.getCode());
        assertEquals("SF_AV_REQUEST_PROCESSED", avProcessed.getLabel());

        ActionTypeEnum paymentNotif = ActionTypeEnum.SF_PAYMENT_NOTIF;
        assertEquals("3", paymentNotif.getCode());
        assertEquals("SF_PAYMENT_NOTIF", paymentNotif.getLabel());
    }

    @Test
    void testValueOfReturnsCorrectEnum() {
        assertEquals(ActionTypeEnum.SF_PAYMENT_REQUEST_PROCESSED,
                ActionTypeEnum.valueOf("SF_PAYMENT_REQUEST_PROCESSED"));
        assertEquals(ActionTypeEnum.SF_AV_REQUEST_PROCESSED,
                ActionTypeEnum.valueOf("SF_AV_REQUEST_PROCESSED"));
        assertEquals(ActionTypeEnum.SF_PAYMENT_NOTIF,
                ActionTypeEnum.valueOf("SF_PAYMENT_NOTIF"));
    }

    @Test
    void testToStringAndIdentity() {
        for (ActionTypeEnum type : ActionTypeEnum.values()) {
            assertNotNull(type.toString());
            assertSame(type, ActionTypeEnum.valueOf(type.name()));
        }
    }
}